<%- include("partials/header.ejs") %>
<div id="userContainer" style="margin-top: 300px;">
    <div class="d-flex align-items-end">
        <div class="pfp" style="background-image: url('<%= locals.pfp%>')" id="userPfp"></div>
        <form action="/changepfp" method="post" enctype="multipart/form-data" class="d-flex flex-column gap-1">
            <input type="file" id="imageUpload" name="newPfp" accept="image/*">
            <input type="submit" value="Upload Image" id="pfpChange">
        </form>
    </div>
    <div id="userEmail" class="mt-3"><strong style="white-space: pre;">Email: </strong><%= locals.email%></div>
    <div><h1>Where to Watch <span style="color: rgb(131, 9, 231)" id="headerTitle">The Walking Dead<span style="color: black; white-space: pre;"> ?</span></span></h1></div>
    <h3>Streaming sucks - We make it easy to find your favorite shows and movies</h3>
    <form class="d-flex flex-column justify-content-center align-items-center" action="/search" method="post">
        <input type="text" id="searchBar" name="searchTerm" placeholder="Name of Show or Movie">
        <input type="submit" id="submitButton" value="Search">
    </form>
    <% if(locals.auth === false) { %>
    <div class="d-flex gap-5 justify-content-center mt-3"> <a class="signUpButton" href="/signup">Sign Up & Make a Watchlist</a> <a class="loginButton" href="/login">Log In</a></div>
    <% } %>
</div>




<script src="/scripts/titleScroll.js"></script>
<script src="/scripts/profile.js"></script>

